<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/title_advanced_options"
        android:textColor="@color/text_color_black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/chkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewTitle"
        android:layout_marginTop="20dp"
        android:checked="true"
        android:text="@string/offer_these_coins_to_buyers" />

    <TextView
        android:id="@+id/txtViewMPLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkBox"
        android:layout_marginTop="10dp"
        android:text="@string/minimum_deposit_payment_amount_for_buyers"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_edt_label" />

    <EditText
        android:id="@+id/edtViewMinPayment"
        style="@style/styleEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewMPLabel"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:inputType="numberDecimal"
        android:text="0" />


    <TextView
        android:id="@+id/txtViewMaxPLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtViewMinPayment"
        android:layout_marginTop="10dp"
        android:text="@string/maximum_deposit_payment_amount"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_edt_label" />

    <EditText
        android:id="@+id/edtViewMaxPayment"
        style="@style/styleEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewMaxPLabel"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:inputType="numberDecimal"
        android:text="0" />

    <LinearLayout
        android:id="@+id/layoutCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtViewMaxPayment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnCancle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/border_selling_edttxt"
            android:text="Cancle"
            android:textColor="@color/bgBlackX"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/selector_edit_btn"
            android:padding="6dp"
            android:text="Save"
            android:textColor="@color/textColorWhite"
            android:visibility="visible" />


    </LinearLayout>

</RelativeLayout>