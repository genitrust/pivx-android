<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtViewInstrLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="@string/instructions_to_sell_pivx"
                android:textColor="@color/text_color_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewInstrLabel"
                android:gravity="center_horizontal"
                android:text="@string/you_will_receive_an_sms_text_message_with_every_deposit"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_top_msg" />

            <TextView
                android:id="@+id/txtViewSendPivToLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewMsg"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/send_piv_to"
                android:textColor="@color/text_color_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewNoneAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewSendPivToLabel"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="@string/none_available"
                android:textColor="@color/color_blue_light"
                android:textSize="@dimen/text_size_top_msg"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgViewQRCode"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_below="@+id/txtViewNoneAvailable"
                android:layout_centerHorizontal="true"
                android:src="@drawable/download" />

            <TextView
                android:id="@+id/txtViewPUT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgViewQRCode"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/publicly_audit_transactions"
                android:textColor="@color/color_blue_light"
                android:textSize="@dimen/text_size_top_msg"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewBankNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewPUT"
                android:layout_marginTop="20dp"
                android:text="@string/bank_name"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_edt_label" />

            <EditText
                android:id="@+id/edtViewBankName"
                style="@style/styleEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewBankNameLabel"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:hint="@string/bank_name"
                android:inputType="text" />


            <TextView
                android:id="@+id/txtViewNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtViewBankName"
                android:layout_marginTop="20dp"
                android:text="@string/name_on_account2"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_edt_label" />

            <EditText
                android:id="@+id/edtViewNewPass"
                style="@style/styleEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewNameLabel"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:hint="@string/name_on_account2"
                android:inputType="text" />

            <TextView
                android:id="@+id/txtViewAccNumLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtViewNewPass"
                android:layout_marginTop="20dp"
                android:text="@string/account_number"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_edt_label" />

            <EditText
                android:id="@+id/edtViewAccNum"
                style="@style/styleEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewAccNumLabel"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:hint="@string/account_number"
                android:inputType="number" />

            <TextView
                android:id="@+id/txtViewPivAvailLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtViewAccNum"
                android:layout_marginTop="20dp"
                android:text="@string/piv_available"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_edt_label" />

            <EditText
                android:id="@+id/edtViewPivAvail"
                style="@style/styleEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewPivAvailLabel"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:hint="@string/piv_available"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/txtViewCurrRateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtViewPivAvail"
                android:layout_marginTop="20dp"
                android:text="@string/your_current_rate"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_edt_label" />

            <EditText
                android:id="@+id/edtViewCurrRate"
                style="@style/styleEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewCurrRateLabel"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:hint="@string/your_current_rate"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/btnEditRate"
                style="@style/styleBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/edtViewCurrRate"
                android:layout_margin="4dp"
                android:text="@string/edit_your_current_rate"
                android:textAllCaps="false"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtViewAdvancedOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnEditRate"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/advanced_options"
                android:textColor="@color/color_blue_light"
                android:textSize="@dimen/text_size_top_msg"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewVeriNoticelbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewAdvancedOption"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/sms_verification_notice"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_top_msg"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewVeriNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewVeriNoticelbl"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/notice"
                android:textColor="@color/edt_text_color"
                android:textSize="@dimen/text_size_notice" />

            <TextView
                android:id="@+id/txtViewTranNoticelbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewVeriNotice"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/transaction_notice"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_top_msg"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewTranNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewTranNoticelbl"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/notice1"
                android:textColor="@color/edt_text_color"
                android:textSize="@dimen/text_size_notice" />

            <TextView
                android:id="@+id/txtViewTranNotice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewTranNotice"
                android:gravity="center_horizontal"
                android:text="@string/notice2"
                android:textColor="@color/edt_text_color"
                android:textSize="@dimen/text_size_notice" />

            <TextView
                android:id="@+id/txtViewTranNotice4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewTranNotice2"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/notice4"
                android:textColor="@color/edt_text_color"
                android:textSize="@dimen/text_size_notice" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>